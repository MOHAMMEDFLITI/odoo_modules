<odoo>

    <record id="property_report_action" model="ir.actions.report">
        <field name="name">Property Report</field>
        <field name="model">property</field>
        <field name="report_type">qweb-pdf</field>
        <field name="binding_model_id" ref="model_property" />
        <field name="binding_type">report</field>  <!--   -->
        <field name="report_name">app_one.property_report_template</field>
    </record>

    <template id="property_report_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="rec">
                    <h1 style="font-family='BitcountGridSingle'">Property Report</h1>
                    <style>
                        table {
                        width: 100%;
                        border: 1px solid black;
                        border-collapse: collapse;
                        padding: 5px;
                        }
                        table th{
                        border: 1px solid black;
                        padding: 5px;
                        background: lightgray;
                        color: black;
                        text-align: center;
                        }
                        table td{
                        border: 1px solid black;
                        padding: 5px;
                        text-align: center;
                        background: white;
                        color: black;
                        }
                    </style>
                    <table>
                        <thead>
                            <th colspan="4">General Information</th>
                        </thead>
                        <tbody>
                            <td>Name</td>
                            <td>
                                <t t-esc="rec.name" />
                            </td>
                            <td>postcode</td>
                            <td>
                                <t t-esc="rec.postcode" />
                            </td>
                        </tbody>
                    </table>
                    <table>
                        <thead>
                            <th colspan="4">Additional Information</th>
                        </thead>
                        <tbody>
                            <td>owner</td>
                            <td>
                                <t t-esc="rec.owner_id.name" />
                            </td> <!--
                            or using <span t-field ="rec.owner_id"/> : it's usefull on Â£ 546 for
                            exemple-->
                            <td>phone</td>
                            <td>
                                <t t-esc="rec.owner_phone" />
                            </td>
                        </tbody>
                    </table>
                    <br />
                    <table>
                        <thead>
                            <th>Description</th>
                            <th>Area</th>
                            <th>Date</th>
                            <th>Price</th>
                        </thead>
                        <tbody>
                            <t t-foreach="docs.line_ids" t-as="line">
                                <tr>
                                    <td>
                                        <t t-esc="line.description" />
                                    </td>
                                    <td>
                                        <t t-esc="line.area" />
                                    </td>
                                    <td>
                                        <t t-esc="line.date" />
                                    </td> <!--or
                                    using <span t-field ="line.date"/> -->
                                    <td>
                                        <t t-esc="line.price" />
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </t>
            </t>
        </t>
    </template>
</odoo>