<?xml version="1.0" encoding="UTF-8"?>


<templates xml:space="preserve">
    <t t-name="app_one.ListView">
        <h1>Properties List</h1>

        <button class="btn btn-primary m-1 p-1" t-on-click="toggleCreateForm">
            <t t-if="!state.showCreateForm">Create</t>
            <t t-else="" >Close</t>
        </button>

        <t t-if="state.showCreateForm">
            <FormView onRecordCreated.bind="onRecordCreated" onCancel.bind ="toggleCreateForm"/> <!-- or toggleCreateForm.bind(this) : this == listView not formView-->
        </t>

        <div class="table-responsive o_list_view">
            <table class="table table-sm o_list_table table-hover table-striped">
                <thead>
                    <tr>
                        <th class="o_list_column_header">Postcode</th>
                        <th class="o_list_column_header">Name</th>
                        <th class="o_list_column_header">Description</th>
                        <th class="o_list_column_header">Actions</th>
                    </tr>
                </thead>
                <tbody>
                   <t t-foreach="state.records" t-as="record" t-key="record.id">
                        <tr>
                            <td> <t t-esc ="record.postcode"/> </td>
                            <td> <t t-esc ="record.name"/> </td>
                            <td> <t t-esc ="record.descreption"/> </td>
                            <td> <button class ="btn btn-danger" t-on-click="deleteRecord.bind(this,record.id)">Delete</button> </td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </div>
    </t>
</templates>