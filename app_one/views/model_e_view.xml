<odoo>

<record id = "model_e_view_tree" model="ir.ui.view">
<field name="name">model e tree</field>
<field name="model">model.e</field>
<field name="arch" type="xml">
<list>
<field name="ref"/>
<field name="date_av"/>
<field name="isShadow" optional = "1"/>
<field name="orientation"/>
</list>
</field>
</record>

<record id = "model_e_view_form" model="ir.ui.view">
<field name="name">model e foem</field>
<field name="model">model.e</field>
<field name="arch" type="xml">
<form>
  <sheet>
  <div class="oe_title">
  <label for = "ref"/>
    <h2>
        <field name="ref"/>
    </h2>
  </div>
    <group>
        <group string="General Information">
            <field name="date_av"/>
        </group>
        <group string="Advanced Options">
            <field name="isShadow"/>
            </group>
        <group string="Display Options">
            <field name="orientation" required="1"/>
            </group>
      </group>
    </sheet>
</form>
</field>
</record>

<record id = "model_e_view_search" model="ir.ui.view">
<field name="name">model e search</field>
<field name="model">model.e</field>
<field name="arch" type="xml">
<search>
<field name="orientation"/> 
<field name="ref"/>
<filter name = "is_Shadow" string="Is shadow" domain="[('isShadow', '=', True)]"/>
<filter name = "is_not_Shadow" string="Is not shadow" domain="[('isShadow', '=', False)]"/>
<filter name = "date_available" string ="2025" domain =" [('date_av','>','01-01-2025')] "/>
<filter name = "grouped_by_orientation"  string= "Grouped by orientation" context="{'group_by':'orientation'}"/>
</search>
</field>
</record>

<record id= "mode_e_action" model ="ir.actions.act_window">
    <field name="name">model</field>
    <field name="res_model">model.e</field>
</record>

<menuitem 
    id="model_es_menu" 
    name="Model Es"
    parent="model_e_menu" 
    action= "mode_e_action"/>

</odoo>