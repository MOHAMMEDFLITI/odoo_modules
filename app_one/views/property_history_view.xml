<odoo>

    <record id="property_history_view_tree" model="ir.ui.view">
        <field name="name">property history tree</field>
        <field name="model">property.history</field>
        <field name="arch" type="xml">
            <list create="0" edit="0" delete="0">
                <field name="user_id" />
                <field name="property_id" />
                <field name="old_state" />
                <field name="new_state" />
                <field name="change_date" />

            </list>
        </field>
    </record>

    <record id="property_history_view_form" model="ir.ui.view">
        <field name="name">property history form</field>
        <field name="model">property.history</field>
        <field name="arch" type="xml">
            <form create="0" edit="0" delete="0">
                <sheet>
                    <group>
                        <group>
                            <field name="user_id" />
                            <field name="property_id" />
                        </group>
                        <group>
                            <field name="old_state" />
                            <field name="new_state" />
                            <field name="reason" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Bedrooms">
                            <field name="line_ids" readonly="1">
                                <list>
                                    <field name="description" />
                                    <field name="area" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="propertie_history_action" model="ir.actions.act_window">
        <field name="name">property history</field> <!--  name as you want -->
        <field name="res_model">property.history</field>
    </record>


    <menuitem
        id="properties_history_menu"
        name="History"
        parent="property_menu"
        action="propertie_history_action"
        groups="app_one.property_manager_group" />

</odoo>