<odoo>

    <record id="property_view_tree" model="ir.ui.view">
        <field name="name">property tree</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <list multi_edit="1" create="true" edit="true" delete="1" class="header_custom"
                decoration-danger="(is_late)">
                <field name="name" />
                <field name="descreption" />
                <field name="postcode" optional="1" />
                <field name="is_late" invisible="1" />
                <field name="owner_id" />
                <field name="owner_adress" />
                <field name="owner_phone" />
                <field name="date_availability" />
                <field name="expected_price" />
                <field name="sold_price" />
                <field name="diff" />
                <field name="bedrooms" />
                <field name="tag_ids" />
                <field name="living_area" />
                <field name="facades" />
                <field name="garage" />
                <field name="state" />
                <field name="garden" />
                <field name="garden_area" />
                <field name="garden_orientation" />

            </list>
        </field>
    </record>

    <record id="property_view_form" model="ir.ui.view">
        <field name="name">property form</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <form create="true" edit="true" delete="0">
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button name="action_open_related_owner" type="object" icon="fa-user" string="Owner"
                            invisible="not owner_id" />
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger"
                        invisible="active" /> <!-- but must active field be in model-->
                    <widget name="web_ribbon" title="Sold" bg_color="text-bg-success"
                        invisible="state != 'sold' " />
                    <header>
                        <button name="action" string="Action" type="object" class="btn-primary" />
                        <button name="action_draft" string="Set to Draft" type="object"
                            class="btn-primary" invisible=" state in ('draft','closed')" />
                        <button name="action_pending" string="Set to Pending" type="object"
                            class="btn-secondary" invisible="state  !='draft' " />
                        <button name="action_sold" string="Set to Sold" type="object"
                            class="btn-success" invisible="state !='pending' " />
                        <field name="state" widget="statusbar" statusbar="draft,pending,sold"
                            options="{'clickable':0}" />
                    </header>
                    <div class="oe_title">
                        <label for="ref" />
                        <h1>
                            <field name="ref" />
                        </h1>
                        <label for="name" />
                        <h3>
                            <field name="name" readonly="state == 'closed'" />
                        </h3>
                    </div>
                    <group>
                        <group string="General Information">
                            <field name="descreption" readonly ="state != 'draft'"/>
                            <field name="postcode" readonly="state == 'closed'" />
                            <field name="date_availability" readonly="state == 'closed'" />
                            <field name="date_availability" readonly="state == 'closed'" />
                            <field name="expected_selling_date" readonly="state == 'closed'" />
                            <field name="is_late" readonly="state == 'closed'" />
                            <field name="owner_id" readonly="state == 'closed'" />
                            <field name="owner_adress" readonly="state == 'closed'" />
                            <field name="owner_phone" readonly="state == 'closed'" />
                            <field name="bedrooms" readonly="state == 'closed'" />
                            <field name="create_date" readonly="1" />
                            <field name="next_time" readonly="1" />
                            <field name="living_area" readonly="state == 'closed'" />
                            <field name="tag_ids" widget="many2many_tags"
                                readonly="state == 'closed'" />
                        </group>
                        <group string="Additional Information">
                            <field name="expected_price" readonly="state == 'closed'" />
                            <field name="sold_price" readonly="state == 'closed'" />
                            <field name="diff" readonly="state == 'closed'" />
                            <field name="garden_orientation" required="1"
                                readonly="state == 'closed'" />
                            <field name="garden_area" readonly="state == 'closed'" />
                            <field name="garden" readonly="state == 'closed'" />
                            <field name="garage" readonly="state == 'closed'" />
                            <field name="facades" readonly="state == 'closed'" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Bedrooms">
                            <field name="line_ids" readonly="state == 'closed'">
                                <list editable="bottom">
                                    <field name="description" />
                                    <field name="area" />
                                </list>
                            </field>
                        </page>
                        <page string="Offers">
                            <field name="line_ids">
                                <list>
                                    <field name="price" />
                                    <field name="date" />
                                </list>
                            </field>
                        </page>
                        <page string="others">
                            <field name="other_line" readonly="state == 'closed'">
                                <list>
                                    <field name="name" />
                                    <field name="notes" />
                                    <field name="yes_no" />
                                    <field name="value" />
                                </list>
                            </field>
                        </page>

                    </notebook>
                </sheet>
                <chatter class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </chatter>
            </form>
        </field>
    </record>

    <record id="property_view_search" model="ir.ui.view">
        <field name="name">property search</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <search>
                <field name="garden_orientation" />
                <field name="name" />
                <filter name="garage" string="is garage" domain="[('garage', '=', True)]" />
                <filter name="is_not_garage" string="is not garage"
                    domain="[('garage', '=', False)]" />
                <filter name="date_available" string="2025"
                    domain=" [('date_availability','>','01-01-2025')] " />
                <filter name="grouped_by_garden" string="Grouped by garden"
                    context="{'group_by':'garden_orientation'}" />
            </search>
        </field>
    </record>

    <record id="propertie_action" model="ir.actions.act_window">
        <field name="name">property</field> <!--  name as you want -->
        <field name="res_model">property</field>
    </record>
